<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Google_Forms_App.MainPage"
             Title="Slidely AI">

    <Grid RowDefinitions="Auto, *">
        <!-- Sidebar -->
        <StackLayout Grid.Row="0" BackgroundColor="#333333" WidthRequest="200">
            <Button Text="View Submissions" TextColor="White"/>
            <Button Text="Create New Submission" TextColor="White"/>
        </StackLayout>

        <!-- Detail Page Placeholder -->
        <Frame Grid.Row="1" Padding="20">
            <Label Text="Welcome to Slidely AI!" FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center" />
        </Frame>
    </Grid>

</ContentPage>



